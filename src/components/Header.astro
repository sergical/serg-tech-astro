---
import TypewriterName from './TypewriterName.svelte';

interface Props {
  name: string;
  location: string;
}

const { name, location } = Astro.props;
---

<header class="mb-8">
  <div class="flex items-center mb-1">
    <h1><TypewriterName client:load /></h1>
  </div>
  <p class="mb-3 text-[#666]">{location}</p>
</header>