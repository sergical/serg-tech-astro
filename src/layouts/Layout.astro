---
import '@fontsource/geist-mono';

interface Props {
  title: string;
}

const { title } = Astro.props;
const themePreference = Astro.cookies.get('theme')?.value || 'system';

import "../styles/global.css";

---

<!doctype html>
<html lang="en" data-theme-preference={themePreference}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Sergiy Dybskiy - Developer Experience Engineer at Sentry. Building great developer tools and experiences." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script is:inline>
      (function() {
        const pref = document.documentElement.getAttribute('data-theme-preference') || 'system';
        const theme = pref === 'system' 
          ? (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light')
          : pref;
        document.documentElement.className = theme;
      })();
    </script>
    <script
      id="counterscale-script"
      data-site-id="serg_tech"
      src="https://counterscale.s-a62.workers.dev/tracker.js"
      defer
    ></script>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --background: #ffffff;
    --foreground: #000000;
    --primary: #333333;
    --muted: #666666;
  }

  :root[class~="dark"] {
    --background: #000000;
    --foreground: #ffffff;
    --primary: #e5e5e5;
    --muted: #666666;
  }

  html {
    font-family: 'Geist Mono', system-ui, sans-serif;
  }

  body {
    background: var(--background);
    color: var(--foreground);
    transition: background-color 0.3s ease, color 0.3s ease;
  }
</style>